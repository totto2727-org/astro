---
interface Props {
	title?: string
}

const { title = "Astro with MistCSS" } = Astro.props
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-[100dvh] bg-dark text-light">
		<slot />
	</body>
</html>
